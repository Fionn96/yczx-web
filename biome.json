{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["dist", "public", "node_modules", ".vscode", "pages/*.md"]
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "lf",
		"lineWidth": 80,
		"attributePosition": "auto"
	},
	"javascript": {
		"globals": [
			"Interceptor",
			"Module",
			"NativeFunction",
			"NativeCallback",
			"Memory",
			"Process",
			"ptr",
			"send"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noInvalidUseBeforeDeclaration": "error",
				"noUnreachable": "error",
				"noUndeclaredVariables": "error"
			},
			"style": {
				"noUselessElse": "error",
				"useFilenamingConvention": "off"
			}
		}
	}
}
